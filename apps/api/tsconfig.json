{
  "extends": "@bunstack/typescript-config/react.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "~react/*": ["../../packages/react/src/*"],
      "~shared/*": ["../../packages/shared/src/*"],
      "~seeds": ["../../packages/shared/seeds"]
    },
    "types": ["bun", "node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../../packages/shared" }
  ],
  "include": ["src"]
}
