{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~i18n": ["../i18n/src/index"],
      "~i18n/*": ["../i18n/src/*"]
    },
    "resolveJsonModule": true,
    "types": ["bun", "node"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "src/locales/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
