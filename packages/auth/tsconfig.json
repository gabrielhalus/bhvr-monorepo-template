{
  "extends": "@bunstack/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~auth": ["../auth/src/index"],
      "~auth/*": ["../auth/src/*"],
      "~db/*": ["../db/src/*"],
      "~shared/*": ["../shared/src/*"]
    },
    "types": ["bun", "node"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../db" },
    { "path": "../shared" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
