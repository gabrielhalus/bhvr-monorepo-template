{
  "extends": "@bunstack/typescript-config/react.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~react/*": ["../react/src/*"],
      "~shared/*": ["../shared/src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "references": [
    { "path": "../../apps/api" },
    { "path": "../shared" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
