{
  "name": "@bunstack/shared",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config/config.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./db/models/*": {
      "types": "./dist/db/models/*.d.ts",
      "import": "./dist/db/models/*.js"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "import": "./dist/schemas/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    },
    "./drizzle": {
      "types": "./dist/drizzle.d.ts",
      "import": "./dist/drizzle.js"
    },
    "./queries/*": {
      "types": "./dist/queries/*.d.ts",
      "import": "./dist/queries/*.js"
    },
    "./env": {
      "types": "./dist/env/index.d.ts",
      "import": "./dist/env/index.js"
    },
    "./i18n": {
      "types": "./dist/i18n/index.d.ts",
      "import": "./dist/i18n/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc -b",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "drizzle:generate": "drizzle-kit generate --config=drizzle.config.cjs",
    "drizzle:push": "drizzle-kit push --config=drizzle.config.cjs",
    "drizzle:studio": "drizzle-kit studio --config=drizzle.config.cjs"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.7.1",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-fs-backend": "^2.6.0",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.7",
    "react-i18next": "^16.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@bunstack/eslint-config": "workspace:*",
    "@bunstack/typescript-config": "workspace:*",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.28.0",
    "eslint-plugin-drizzle": "^0.2.3"
  }
}
